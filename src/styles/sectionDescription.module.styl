@import './variables.styl'

.container
  width 30vw
  // margin 4.8rem
  margin 3vw

  // this fits the stuff inside the container to its height
  display flex
  flex-direction column

  img
    transition $transition
    opacity 0


  h1 
    margin 0.75vw

  .descriptionContainer
    margin 0 0.75vw
    padding-right 0.75vw
    overflow-y auto

  .fadeIn
    opacity 1

  img
  h1
  p
    width 100%

  img 
    // height 30vw
    height 22.5vw
    object-fit cover
