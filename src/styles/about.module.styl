@import './variables.styl'


.descriptionContainer
  // margin-right 1.05vw
  // margin-left 3vw
  margin-bottom 3vw

  .certificationContainer
    display flex
    flex-direction column
    margin-bottom 1.05vw

    .organisation
      transition $transition
      color $white
      width fit-content

      &:hover
        color $ipt-orange 

    .qualification
      color $grey-600



.description 

  p
    margin-top 0
    width 30vw // to fit the words on a single line

.contact
  // margin-top 6.4rem
  // margin-top 4vw

  width $text-container-width

  color $grey-400

  .inTouch
  .email
    color $white

  .email
    &:hover
      transition $transition-hover
      color $ipt-orange

.iconsContainer
  // margin-top 3.6rem
  // margin-top 2.25vw
  margin-top 0.38vw
  display flex
  position relative
  left -0.5vw

  img
    // max-height 5rem
    max-height 3.1vw
    width auto

    margin 0

    transition $transition
    // opacity 0

  // .fadeIn
  //   opacity 1

  a 
    &:not(:first-of-type)
      // margin-left 1rem
      margin-left 0.62vw
      
  .icon
    // height 5rem
    height 3.1vw
    width initial
    filter $white_filter
    transition $transition

    &:hover
      transition $transition-hover
      filter $ipt-orange_filter