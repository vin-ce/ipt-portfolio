@import './variables.styl'

.categoriesContainer
  // display flex
  margin-top 3.6rem

  .category
    margin-top 3.6rem
    &:first-of-type
      margin-left 0

    .sectionContainer
      display flex
      flex-wrap wrap
      margin-top 1.8rem

      color $grey-400
      font-size 1.6rem

      span
        cursor pointer
        user-select none
        transition $transition
        &:hover
          color $ipt-orange

      .section
        margin-right 6.4rem
        margin-bottom 3.6rem

        .sectionItem
          margin-top 0.6rem
          margin-left 3.6rem

  .headingContainer
    display flex
    justify-content space-between

  // active / selected ordering matters
  .active
    color black

  .selected 
    color $ipt-orange
    
  