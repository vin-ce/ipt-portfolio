$text-container-width = 60rem 

$margin-bottom = 1.2rem
$default-horizontal-margins = 3.6rem

// $link-light = #e68a94
// $link-medium = #eb4255
$link-light = black
$link-medium = black

$yellow-light = #fff2c4
$yellow-medium = #ffd02b

$ipt-orange = #FE6900
$ipt-orange_filter = invert(49%) sepia(14%) saturate(6515%) hue-rotate(355deg) brightness(98%) contrast(116%)

$grey-100 = #f5f5f5
$grey-200 = #c2c2c2

$grey-400 = #9e9e9e
$grey-400_filter = invert(70%) sepia(0%) saturate(15%) hue-rotate(228deg) brightness(92%) contrast(82%)

$grey-600 = #616161

$black_filter = invert(0%) sepia(0%) saturate(9%) hue-rotate(239deg) brightness(104%) contrast(100%)

$transition = 200ms

// fits span to svg icon
icon-wrapper()
  margin-right 0.6rem
  transition $transition
