@import './variables.styl'

.container

  position fixed
  top 0
  left 0

  z-index 100

  width 100%
  height 100%

  overflow hidden

  // background-color rgba(255,255,255,0.5)
  background-color rgba(0,0,0,0.8)
  backdrop-filter blur(2px)

  animation fadeIn 0.5s ease

  display flex
  justify-content center

  .close
    cursor pointer

    // height 4.8rem
    // width 4.8rem
    height 3vw
    width 3vw
    
    position absolute
    // top 3.6rem
    // right 3.6rem
    top 2.25vw
    right 2.25vw

    filter $white_filter

.fadeOut
  animation fadeOut 250ms ease

@keyframes fadeIn
  from {
    opacity 0
  }
  to {
    opacity 1
  }

@keyframes fadeOut
  from {
    opacity 1
  }
  to {
    opacity 0
  }

