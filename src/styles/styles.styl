@import './variables.styl'

/* this sets REM to be based off of 10px */
:root 
  font-size 62.5%

body 
  margin 6.4rem 3.6rem
  font-family 'IBM Plex Sans', sans-serif
  font-size 2.1rem
  line-height 1.5

h1 
  font-size 3.6rem
  // allows h4 subhead to fit nicely
  margin-bottom 0

a 
  color $link-medium 
  text-decoration none 

a:visited 
  color $link-light


p 
  margin 3.6rem 0 $margin-bottom 0
  width $text-container-width

// all p that are not perceeded by a p
:not(p) + p
  margin-top $margin-bottom

@media(max-width 400px) 
  
  h1 
    font-size 3.2rem

  body,
    font-size 1.8rem
