@import './variables.styl'

.container 
  position fixed
  top 0
  left 0

  // padding 1.6rem $default-horizontal-margins
  padding  1.05vw $default-horizontal-margins
  box-sizing border-box
  width 100%

  display flex
  justify-content space-between

  pointer-events none

  z-index 50


.about
  pointer-events all
  transition $transition
  color $grey-600
  // color $white
  cursor pointer
  // font-size $font-size_large
  font-size $font-size_medium

  &:hover
    transition $transition-hover
    color $ipt-orange


.active
  .about
    color $white
    cursor default
    pointer-events none


